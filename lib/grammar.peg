Program
	= __ stmts:Statement* {
		return stmts;
	}

Statement
	= stmt:Assignment TERM __ { return stmt; }
	/ stmt:MessageSend TERM __ { return stmt; }

//
// Helpers

TERM
	= _ NL

NL
	= '\n'
	/ '\r' '\n'?

_
	= [ \t]*

__
	= [ \r\n\t]*